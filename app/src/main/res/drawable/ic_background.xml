<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle" >
            <solid android:color="#e9e9e9" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="0"
            android:pivotX="90%"
            android:pivotY="0%" >
            <shape
                android:shape="rectangle" >
                <solid android:color="#353535" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="0"
            android:pivotX="70%"
            android:pivotY="105%" >
            <shape
                android:shape="rectangle" >
                <solid android:color="#acacac" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="0"
            android:pivotX="50%"
            android:pivotY="210%" >
            <shape
                android:shape="rectangle" >
                <solid android:color="#686868" />
            </shape>
        </rotate>
    </item>

</layer-list>